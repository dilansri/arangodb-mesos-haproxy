{
  "id": "/arangodb-proxy",
  "cmd": "nodejs /configurator.js arangodb3",
  "cpus": 1,
  "mem": 128,
  "disk": 0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "m0ppers/arangodb-mesos-haproxy",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 8529
        }
      ],
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "portDefinitions": [
    {
      "port": 8529,
      "protocol": "tcp",
      "name": "arangodb-proxy",
      "labels": {}
    }
  ],
  "requirePorts": true
}
